---
import { siteLabels } from "../model/site-labels";
---

<section class="h-screen flex items-center justify-center">
  <a href={siteLabels.instagram} class="cursor-pointer">
    <img
      src="argot.svg"
      alt="Argot Logo"
      class="w-60 h-60 md:w-80 md:h-80"
    />
  </a>
</section>

<section class="h-screen flex items-center justify-center px-4">
  <article
    class="max-w-3xl text-white
           px-6 py-8 md:px-10 md:py-12
           rounded-3xl backdrop-blur-md bg-white/5 ring-1 ring-white/10 shadow-2xl">
    <p class="prose prose-invert drop-shadow-[0_0_2px_rgba(0,0,0,2)] text-xl md:text-2xl leading-relaxed m-0">
      {siteLabels.description.intro}
    </p>
  </article>
</section>