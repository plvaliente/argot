---
import { siteLabels } from "../model/site-labels";
---

<section class="h-screen flex items-center justify-center">
  <a href={siteLabels.instagram} class="cursor-pointer">
    <img 
      src="argot.svg" 
      alt="Argot Logo" 
      class="w-60 h-60 md:w-80 md:h-80"
    />
  </a>
</section>
<section class="prose prose-invert max-w-3xl px-6 py-16 text-white mx-auto">
  <p>{siteLabels.description.intro}</p>
  <p>{siteLabels.description.exploration}</p>
  <p>{siteLabels.description.welcome}</p>
</section>